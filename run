#!/bin/bash -e

GAP="gap64L"

if [ "$1" = "calc" ]
then
	echo 'Calculating...'
	echo '' | $GAP -q calculate-twoa.gap

	echo 'Zipping...'
	zip -q -j results results/*
elif [ "$1" = "bench" ]
then
	echo 'Benchmarking...'
	echo '' | $GAP -q benchmark-twoa.gap
elif [ "$1" = "check" ]
then
	echo 'Checking condition...'
	echo '' | $GAP -q check-condition.gap
else
    echo 'Usage: ./run [calc|bench|check]'
fi

exit 0
